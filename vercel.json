{
    "version": 3,
    "builds": [
      {
        "src": "public/index.php",
        "use": "@vercel/php"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/public/index.php"
      }
    ],
    "env": {
      "APP_ENV": "production",
      "APP_DEBUG": "false",
      "APP_URL": "https://yourproductionurl.com",
      "DB_CONNECTION": "mysql",
      "DB_HOST": "127.0.0.1",
      "DB_PORT": "3306",
      "DB_DATABASE": "todolist_api_db",
      "DB_USERNAME": "root",
      "DB_PASSWORD": "password"
    }
  }